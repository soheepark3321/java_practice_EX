ex 4-1)
package CH02_Variable;
//import java.util.*;

public class ex2_1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int x=0;
		System.out.printf("x=%d 일 때, 참인 것은 %n", x);
		
		if(x==0) 
			System.out.println("x==0");
		if(x!=0)
			System.out.println("x!=0");
		if(!(x==0))
			System.out.println(!(x==0));
		if(!(x!=0))
			System.out.println(!(x!=0));
		
		x=1; //x는 1로 초기화 
		System.out.printf("x=%d 일 때, 참인 것은 %n", x);

		if(x==0) 
			System.out.println("x==0");
		if(x!=0)
			System.out.println("x!=0");
		if(!(x==0))
			System.out.println(!(x==0));
		if(!(x!=0))
			System.out.println(!(x!=0));
		
	}

}
